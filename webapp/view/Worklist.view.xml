<mvc:View
	controllerName="phoenix.controller.Worklist"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:layout="sap.ui.layout"
	xmlns:form="sap.ui.layout.form"
	xmlns:uified="sap.ui.unified"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic"
	xmlns:footerbar="sap.ushell.ui.footerbar">

	<semantic:FullscreenPage
		id="page"
		navButtonPress="onNavBack"
		showNavButton="true"
		title="{i18n>worklistViewTitle}">
		<semantic:content>
			<form:SimpleForm  title = "List Table"  layout = "ResponsiveGridLayout" >
				<List  items = "{/ET_FruitSet}"  width = "500px"  growing = "true"  growingThreshold = "10" >
					<StandardListItem  title = "{Fruit}"
										description = "{Descrp}"
										info = "{Uom}"	
										infoState = "Error"	/>
				</List>
			</form:SimpleForm>
			
			
			<form:SimpleForm  title = "Dynamic Table"  layout = "ResponsiveGridLayout" >
				<Table
					id="table"
					width="auto"
					class="sapUiResponsiveMargin"
					items="{
						path: '/ET_FruitSet',
						sorter: {
							path: 'Descrp',
							descending: false
						}
					}"
					noDataText="{worklistView>/tableNoDataText}"
					busyIndicatorDelay="{worklistView>/tableBusyDelay}"
					growing="true"
					growingScrollToLoad="true"
					updateFinished="onUpdateFinished">
	
					<headerToolbar>
						<Toolbar>
							<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
							<ToolbarSpacer />
							<SearchField
								id="searchField"
								tooltip="{i18n>worklistSearchTooltip}"
								search="onSearch"
								width="auto">
							</SearchField>
						</Toolbar>
					</headerToolbar>
	
					<columns>
						<Column id="nameColumn">
							<Text text="{i18n>tableNameColumnTitle}" id="nameColumnTitle"/>
						</Column>
						<Column id="unitNumberColumn" hAlign="End">
							<Text text="{i18n>tableUnitNumberColumnTitle}" id="unitNumberColumnTitle"/>
						</Column>
					</columns>
	
					<items>
						<ColumnListItem
							type="Navigation"
							press="onPress">
							<cells>
								<ObjectIdentifier
									title="{Descrp}"/>
								<ObjectNumber
									number="{
										path: 'Price',
										formatter: '.formatter.numberUnit'
									}"
									unit="{Uom}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</form:SimpleForm>
		</semantic:content>

		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press="onShareEmailPress"/>
		</semantic:sendEmailAction>

		<semantic:shareInJamAction>
			<semantic:ShareInJamAction id="shareInJam" visible="{FLP>/isShareInJamActive}" press="onShareInJamPress"/>
		</semantic:shareInJamAction>

		<semantic:saveAsTileAction>
			<footerbar:AddBookmarkButton id ="shareTile" title="{worklistView>/saveAsTileTitle}" />
		</semantic:saveAsTileAction>

	</semantic:FullscreenPage>

</mvc:View>